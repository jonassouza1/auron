{
  "name": "auron",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm run services:up && npm run services:wait:database && npm run migrations:up && next dev --turbopack",
    "test": "npm run services:up && concurrently -n next,jest --hide next -k -s command-jest 'next dev --turbopack' 'jest --runInBand'",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "posttest": "npm run services:stop",
    "services:up": "docker compose -f src/infra/compose.yaml up -d",
    "services:down": "docker compose -f src/infra/compose.yaml down",
    "services:stop": "docker compose -f src/infra/compose.yaml stop",
    "services:wait:database": "node src/infra/scripts/wait-for-postgres.js",
    "lint": "next lint",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "prepare": "husky",
    "commit": "cz",
    "migrations:create": "node-pg-migrate -m src/infra/migrations create",
    "migrations:up": "node-pg-migrate -m src/infra/migrations --envPath .env.development up"
  },
  "dependencies": {
    "async-retry": "^1.3.3",
    "dotenv": "^16.5.0",
    "dotenv-expand": "^12.0.2",
    "lucide-react": "^0.503.0",
    "mercadopago": "^2.5.0",
    "next": "15.3.1",
    "node-pg-migrate": "^7.9.1",
    "pg": "^8.15.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/async-retry": "^1.4.9",
    "@types/jest": "^29.5.14",
    "@types/mercadopago": "^1.5.11",
    "@types/node": "^20",
    "@types/pg": "^8.11.14",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "commitizen": "^4.3.1",
    "concurrently": "^9.1.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-jest": "^28.11.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
